<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_margin="9dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        app:cardCornerRadius="6dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"

        >




        <androidx.cardview.widget.CardView
            android:id="@+id/cardVidcatsiting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="4dp"

            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ImgIconid"
                android:scaleType="centerCrop"
                android:layout_width="44dp"

                android:src="@drawable/handshakeimg"
                android:layout_height="44dp">

            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            app:layout_constraintStart_toEndOf="@id/cardVidcatsiting"
            app:layout_constraintTop_toTopOf="@id/cardVidcatsiting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/TvServiceName"
                android:layout_gravity="center"
                android:textAlignment="center"


                android:textSize="15sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Sitting"

                >

            </TextView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>