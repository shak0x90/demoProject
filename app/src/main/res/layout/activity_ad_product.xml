<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:layout_marginTop="60dp"
    android:paddingLeft="20dp"
    android:background="@color/white"
    tools:context=".AdProduct">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/Btnarrowback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:background="@color/trans"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/TvHeading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add Product"
        android:textSize="18sp"
        android:textColor="@color/blackheadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/LyoutRl1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:background="@drawable/circlegrren"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnuploadimg1"
            android:background="@color/trans"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/LayoutRl1img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageprofile1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/catimg3"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnimage1"
            android:layout_alignEnd="@id/imageprofile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:src="@drawable/crossbtnsvg"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LyoutRl2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:background="@drawable/circlegrren"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnuploadimg2"
            android:background="@color/trans"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LayoutRl2img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageprofile2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/catimg3"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnimage2"
            android:layout_alignEnd="@id/imageprofile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:src="@drawable/crossbtnsvg"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/LyoutRl3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:background="@drawable/circlegrren"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnuploadimg3"
            android:background="@color/trans"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LayoutRl3img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageprofile3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/catimg3"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnimage3"
            android:layout_alignEnd="@id/imageprofile3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:src="@drawable/crossbtnsvg"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/LyoutRl4"
        app:layout_constraintEnd_toEndOf="@+id/LyoutRl3"
        app:layout_constraintStart_toStartOf="@+id/LyoutRl2"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:background="@drawable/circlegrren"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnuploadimg4"
            android:background="@color/trans"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LayoutRl4img"
        app:layout_constraintEnd_toEndOf="@+id/LyoutRl3"
        app:layout_constraintStart_toStartOf="@+id/LyoutRl2"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageprofile4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/catimg3"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnimage4"
            android:layout_alignEnd="@id/imageprofile4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:src="@drawable/crossbtnsvg"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LyoutRl5"
        app:layout_constraintEnd_toEndOf="@+id/LyoutRl2"
        app:layout_constraintStart_toStartOf="@+id/LyoutRl1"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:background="@drawable/circlegrren"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_height="50dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnuploadimg5"
            android:background="@color/trans"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/upload"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LayoutRl5img"
        app:layout_constraintEnd_toEndOf="@+id/LyoutRl2"
        app:layout_constraintStart_toStartOf="@+id/LyoutRl1"
        app:layout_constraintTop_toBottomOf="@id/TvHeading"
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageprofile5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/catimg3"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeWidth="1dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/Btnimage5"
            android:layout_alignEnd="@id/imageprofile5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            android:src="@drawable/crossbtnsvg"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/TvproductName"
        android:text="Product Name"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/LayoutRl5img"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:textColor="@color/subhadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/EDproductname"
        app:layout_constraintTop_toBottomOf="@+id/TvproductName"
        app:layout_constraintStart_toStartOf="@id/TvproductName"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:background="@drawable/editextloginshape"
        android:layout_width="355dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/TvProductPrice"
        android:text="Product Price"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/EDproductname"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:textColor="@color/subhadingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/EDproductPrcie"
        app:layout_constraintTop_toBottomOf="@+id/TvProductPrice"
        app:layout_constraintStart_toStartOf="@id/TvProductPrice"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:inputType="numberDecimal"
        android:background="@drawable/editextloginshape"
        android:layout_width="355dp"
        android:layout_height="60dp"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BtnSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="44dp"
        android:textColor="@color/white"
        android:text="Save"
        android:textAllCaps="false"
        android:background="@drawable/roundercorners"
        android:layout_width="343dp"
        android:layout_height="54dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>